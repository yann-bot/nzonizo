generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Utilisateur {
  id Int @id @default(autoincrement())
  nom String
  telephone  String @unique
  motdepasse String
  role String // "client" | "technicien" | "admin"
  technicien Technicien?
  avisClient Avis[] @relation("AvisClient")
}

model Technicien {
  id Int @id @default(autoincrement())
  specialite String
  zoneCouverture String
  statut Boolean @default(true)
  utilisateurId Int @unique 
  utilisateur Utilisateur @relation(fields: [utilisateurId],references: [id])
  avis Avis[]
}

model Avis {
  id           Int        @id @default(autoincrement())
  note         Int
  commentaire  String?
  clientId     Int
  technicienId Int
  client       Utilisateur @relation("AvisClient", fields: [clientId], references: [id])
  technicien   Technicien  @relation(fields: [technicienId], references: [id])
}